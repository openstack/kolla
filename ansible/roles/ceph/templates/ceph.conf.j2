[global]
fsid = {{ ceph_cluster_fsid }}
mon initial members = {% for host in groups['ceph-mon'] %}{{ hostvars[host]['ansible_hostname'] }}{% if not loop.last %}, {% endif %}{% endfor %}

mon host = {% if ceph_mon_hosts is defined %}{{ ceph_mon_hosts }}{% else %}{% for host in groups['ceph-mon'] %}{{ hostvars[host]['ansible_' + api_interface]['ipv4']['address'] }}{% if not loop.last %}, {% endif %}{% endfor %}{% endif %}

auth cluster required = cephx
auth service required = cephx
auth client required = cephx
